		{% javascripts %}
		{% stylesheets %}
	</head>
	<body>
		<div id="header">
			<h1>MongoAdmin</h1>
		</div>

		<div id="navigation">
			{% include "MongoAdminBundle:layout:navigation.twig" with ['_view': _view] %}
		</div>

		<div id="content">
			{% block content '' %}
		</div>

		<div id="footer">
			{% include "MongoAdminBundle:layout:footer.twig" with ['_view': _view] %}
		</div>
	</body>
</html>