{% extends "MongoAdminBundle:layout:layout.twig" %}

{% block resources %}
	{% javascript 'bundles/mongoadmin/js/jquery.tablesorter.js' %}
{% endblock %}

{% block content %}
	{% include "MongoAdminBundle:layout:breadcrumb.twig" with {'server': server} %}

	<table class="tablesorter">
		<thead>
			<tr>
				<th>Name</th>
				<th>Collections</th>
				<th>Size On Disk</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for database in databases %}
				<tr>
					<td><a href="{% path 'mongo_db' with {'server': server, 'db': database.getName()} %}">{{ database.getName() }}</a></td>
					<td>{{ database.count() }}</td>
					<td class="size-on-disk">{{ database.getSizeOnDisk() }}</td>
					<td></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<script type="text/javascript">
		$(function() {
			$('.tablesorter').tablesorter({
				headers: {
					3: { sorter: false }
				},
				sortList: [[0, 0]]
			});
		});
	</script>
{% endblock %}
